#:kivy 2.1.0
<ScreenScanQr>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 1, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER REFILL STATION"
				text: "WATER REFILL STATION"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Logo_Main.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.1

			MDLabel:
				text: "SCAN QR CODE FROM YOUR KICKYOURPLAST APP"
				text: "SCAN QR CODE FROM YOUR KICKYOURPLAST APP"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.accent_color
			size_hint: 1, 0.75
			padding:20
			spacing:20

            MDLabel:
				text: "Please Scan your QR Code Coupon"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 32
				size_hint_y: 0.1

            Image:
                source:'asset/Logo_Scan_QR.png'
                size_hint_y: 0.8
                allow_stretch: True 

			MDTextField:
				id: coupon
				halign: 'center'
				valign: 'middle'
				font_size: 12
				size_hint_y: 0.1
				multiline: False
				opacity: 0.1
				size_hint_x: 1
				on_text_validate: root.coupon_validate()

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_cancel
			icon: "cancel"
			text: "CANCEL"
			font_size: 28
			size_hint: 0.2, 0.1
			pos_hint: {"center_x": .9, "center_y": .2}
			on_press: root.screen_choose_product()

			
				


			
				
