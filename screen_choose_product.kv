#:kivy 2.1.0
<ScreenChooseProduct>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 1, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER REFILL STATION"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Logo_Main.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.1

			MDLabel:
				text: "CHOOSE PRODUCT"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_product_type
			orientation: "horizontal"
			md_bg_color: app.theme_cls.accent_color
			size_hint: 1, 0.1
			padding:10
			spacing:10

			MDFillRoundFlatIconButton:
				id: bt_cold
				icon: "snowflake"
				text: "COLD"
				font_size: 24
				size_hint: 1, 1
				on_press: root.cold_mode(True)

			MDFillRoundFlatIconButton:
				id: bt_normal
				icon: "snowflake-off"
				text: "NORMAL"
				font_size: 24
				size_hint: 1, 1
				on_press: root.cold_mode(False)

		MDGridLayout:
			id: layout_products
			cols:3
			md_bg_color: app.theme_cls.accent_color
			row_force_default: True
			row_default_height: 150
			size_hint: 1, 0.65
			padding:20
			spacing:20

			
	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_info
			icon: "information"
			text: "INFO"
			font_size: 28
			size_hint: 0.2, 0.1
			pos_hint: {"center_x": .9, "center_y": .1}
			on_press: root.screen_info()
		
		MDFillRoundFlatIconButton:
			id: bt_screen_qr
			icon: "qrcode-scan"
			text: "Scan QR Code\n(buy via app)"
			font_size: 28
			size_hint: 0.2, 0.1
			pos_hint: {"center_x": .5, "center_y": .1}
			on_press: root.screen_scan_qr()
				
