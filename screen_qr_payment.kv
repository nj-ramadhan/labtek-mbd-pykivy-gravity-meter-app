#:kivy 2.1.0

<ScreenQRPayment>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 1, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER REFILL STATION"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Logo_Main.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "SCAN THIS QR FOR PAY"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			orientation: "vertical"
			md_bg_color: app.theme_cls.accent_color
			size_hint: 1, 0.75
			padding:10
			spacing:10

			AsyncImage:
				id: image_qr_payment
				allow_stretch: True 


	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_choose_product
			icon: "cancel"
			text: "CANCEL"
			font_size: 28
			size_hint: 0.2, 0.1
			pos_hint: {"center_x": .9, "center_y": .2}
			on_press: root.cancel()

		MDFillRoundFlatIconButton:
			id: bt_dummy_success
			text: " "
			font_size: 14
			size_hint: 0.08, 0.08
			pos_hint: {"center_x": .9, "center_y": .80}
			on_press: root.dummy_success()
				